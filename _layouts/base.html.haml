!!!5
%html(lang='en')
  %head
    %meta(charset='utf-8')
    %meta(http-equiv='X-UA-Compatible' content='IE=edge')
    %meta(name='viewport' content='width=device-width, initial-scale=1.0')
    - page_title = "#{page.title ? page.title : site.title}"
    %title=page_title
    %link{:rel=>'stylesheet', :href=>"#{site.base_url}/stylesheets/normalize.css"}
    %link{:rel=>'stylesheet', :href=>"#{site.base_url}/stylesheets/flatly-bootstrap.min.css"}
    %link{:rel=>'stylesheet', :href=>"#{site.base_url}/stylesheets/site-style.css"}
    -# HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
    -# WARNING: Respond.js doesn't work if you view the page via file://
    <!--[if lt IE 9]> <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script> <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script> <![endif]-->
  %body
    .navbar.navbar-inverse
      .navbar-header
        %button(type='button' class='navbar-toggle collapsed' data-toggle='collapse' data-target='#navbar' aria-expanded='false' aria-controls='navbar')
          %span.sr-only
            Toggle naivgation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand(href='/')
          Lambdamatic
      #navbar.navbar-collapse.collapse
        %ul.nav.navbar-nav
          %li
            %a(href='/')="Home"
          %li
            %a(href='/mongodb/')="MongoDB"
          %li
            %a(href='/jpa/')="JPA"
        %ul.nav.navbar-nav.navbar-right
          %li
            %a(href='/news/')="News"
          %li
            %a(href='/license/')="License"
    ~ content
    %footer
      .container
        .row
          .col-sm-6
            Copyright (C) Xavier Coulon
    -# jquery (necessary for bootstrap's javascript plugins)
    %script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js")
    -# include all compiled plugins (below), or include individual files as needed 
    %script(src="#{site.base_url}/javascripts/bootstrap.min.js")
    - if site.google_analytics
      =google_analytics_async
