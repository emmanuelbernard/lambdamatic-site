---
layout: base
---
.container
  .row
    .col-md-8.col-md-offset-2
      - for post in page.posts
        .post
          %h1
            %a{:href=>post.url}= post.title
          %h3
            %small
              = post.date.strftime( '%b %-d, %Y' )
            %small
              |
            %small
              %strong
                = post.author
          .content
            = post.content
            %hr
  .row
    .col-md-8.col-md-offset-2
      = page.posts.links
